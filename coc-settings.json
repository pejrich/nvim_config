{
  "codeLens.enable": true,
  "languageserver": {
    "elixirls": {
      "command": "elixir-ls",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "elixir",
        "eelixir",
        "heex"
      ],
      "trace.server": "verbose",
      "rootPatterns": [
        "mix.exs"
      ],
      "initializationOptions": {
        "mixEnv": "dev"
      },
      "settings": {
        "mixEnv": "dev",
        "validate": true
      }
    },
    "nextls": {
      "command": "nextls",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "elixir",
        "eelixir",
        "heex"
      ],
      "trace.server": "verbose",
      "rootPatterns": [
        "mix.exs"
      ],
      "initializationOptions": {
        "mixEnv": "dev"
      },
      "settings": {
        "mixEnv": "dev",
        "validate": true
      }
    }
  }
}
